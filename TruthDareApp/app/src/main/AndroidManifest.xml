<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ilhan.truthdare">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.ilhan.truthdare.StartActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ilhan.truthdare.DareActivity"
            android:label="@string/dare"></activity>
        <activity
            android:name="com.ilhan.truthdare.TruthActivity"
            android:label="@string/truth"></activity>
        <activity android:name="com.ilhan.truthdare.MainActivity"
            android:screenOrientation="portrait"></activity>
    </application>

</manifest>